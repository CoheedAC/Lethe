<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_yikyak</item>
        <item name="popupMenuStyle">@style/PopupMenu.Yikyak</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Yikyak</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Yikyak</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Yikyak</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Yikyak</item>
        <item name="actionModeBackground">@drawable/cab_background_top_yikyak</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_yikyak</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Yikyak</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="actionOverflowButtonStyle">@style/myCustomMenuTextApearance</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Yikyak.Widget</item>
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#60D6B2</item>
    </style>

    <style name="ActionBar.Solid.Yikyak" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_yikyak</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_yikyak</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_yikyak</item>
        <item name="progressBarStyle">@style/ProgressBar.Yikyak</item>
    </style>

    <style name="ActionBar.Transparent.Yikyak" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_yikyak</item>
        <item name="progressBarStyle">@style/ProgressBar.Yikyak</item>
    </style>

    <style name="PopupMenu.Yikyak" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_yikyak</item>
    </style>

    <style name="DropDownListView.Yikyak" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_yikyak</item>
    </style>

    <style name="ActionBarTabStyle.Yikyak" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_yikyak</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#60D6B2</item>
    </style>

    <style name="DropDownNav.Yikyak" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_yikyak</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_yikyak</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_yikyak</item>
    </style>

    <style name="ProgressBar.Yikyak" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_yikyak</item>
    </style>

    <style name="ActionButton.CloseMode.Yikyak" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_yikyak</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Yikyak.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Yikyak</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Yikyak</item>
    </style>


</resources>