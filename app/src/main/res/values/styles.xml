<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Flik" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_flik</item>
        <item name="popupMenuStyle">@style/PopupMenu.Flik</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Flik</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Flik</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Flik</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Flik</item>
        <item name="actionModeBackground">@drawable/cab_background_top_flik</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_flik</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Flik</item>

        <item name="android:typeface">monospace</item>

        <item name="actionBarWidgetTheme">@style/Theme.Flik.Widget</item>

    </style>

    <style name="ActionBar.Solid.Flik" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_flik</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_flik</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_flik</item>
        <item name="progressBarStyle">@style/ProgressBar.Flik</item>
    </style>

    <style name="ActionBar.Transparent.Flik" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_flik</item>
        <item name="progressBarStyle">@style/ProgressBar.Flik</item>
    </style>

    <style name="PopupMenu.Flik" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flik</item>
    </style>

    <style name="DropDownListView.Flik" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_flik</item>
    </style>

    <style name="ActionBarTabStyle.Flik" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_flik</item>
    </style>

    <style name="DropDownNav.Flik" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_flik</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flik</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_flik</item>
    </style>

    <style name="ProgressBar.Flik" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_flik</item>
    </style>

    <style name="ActionButton.CloseMode.Flik" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_flik</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Flik.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Flik</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Flik</item>
    </style>

</resources>