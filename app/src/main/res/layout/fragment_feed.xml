<com.cs48.lethe.ui.view_helpers.ScrollableSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/swipeRefreshLayout"
             tools:context="com.cs48.lethe.ui.fragments.FeedFragment">

    <com.cs48.lethe.ui.view_helpers.ExpandableHeightGridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedGridView"
        android:layout_gravity="left|top"
        android:numColumns="3"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        android:stretchMode="columnWidth"/>

</com.cs48.lethe.ui.view_helpers.ScrollableSwipeRefreshLayout>
